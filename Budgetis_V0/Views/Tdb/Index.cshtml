@model List<Budgetis_V0.Models.Tache>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tableau de bord du mois de @Html.Label(DateTime.Now.ToString("MMMM"))</h2>


@if (!Model.Any())
{
    <p>Aucune tâche accomplie ..</p>
}
else
{ <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>liste des taches</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var task in Model)
            {
                <tr>


                    <td>@Html.ActionLink(task.description, "Detail", "Tache", new { id = task.id }, null)</td>

                </tr>

            }
        </tbody>


    </table>
}

